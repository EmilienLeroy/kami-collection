{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true, 
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "rootDirs": ["./"],
    "baseUrl": ".",
    "paths": {
      "@kamiapp/media": ["./packages/media/src/index.ts"],
      "@kamiapp/pdf": ["./packages/pdf/src/index.ts"],
      "@kamiapp/progress-bar": ["./packages/progress-bar/src/index.ts"],
      "@kamiapp/search-bar": ["./packages/search-bar/src/index.ts"],
      "@kamiapp/flash": ["./packages/flash/src/index.ts"],
      "@kamiapp/infinite-list": ["./packages/infinite-list/src/index.ts"],
      "@kamiapp/markdown": ["./packages/markdown/src/kami-markdown.ts"],
      "@kamiapp/changelog": ["./packages/changelog/src/kami-changelog.ts"],
      "@kamiapp/theme": ["./packages/theme/src/index.ts"],
      "@kamiapp/transition": ["./packages/transition/src/kami-transition.ts"]
    }
  },
  "include": ["demos"],
  "exclude": ["node_modules"]
}
