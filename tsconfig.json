{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@kamiapp/component": ["./packages/component/src/kami-component.ts"],
      "@kamiapp/flash": ["./packages/flash/src/kami-flash.ts"]
    }
  },
  "include": ["demos", "packages/*"]
}
